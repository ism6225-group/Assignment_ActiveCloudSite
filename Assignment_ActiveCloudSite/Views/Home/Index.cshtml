@{
    ViewData["Title"] = "Home Page";
}

<section class="jumbotron text-center bg-white">
    <div class="container">
        <h1 class="jumbotron-heading">Welcome to Bull Finance</h1>
        <p class="lead text-muted">The right place for ...</p>
    </div>
</section>

<div class="container">
    <div class="card-deck mb-3 text-center">
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Market View</h4>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mt-3 mb-4">
                    <li>Market News</li>
                    <li>Market Performance</li>
                </ul>
                <a class="btn btn-lg btn-block btn-outline-primary" asp-controller="Home" asp-action="Market">Get started</a>
            </div>
        </div>
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Stocks Insights</h4>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mt-3 mb-4">
                    <li>Stocks Charts</li>
                    <li>Stocks Quotes</li>
                </ul>
                <a class="btn btn-lg btn-block btn-outline-primary" asp-controller="Home" asp-action="Stocks">Let's go</a>
            </div>
        </div>
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Stock Recommendations</h4>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mt-3 mb-4">
                    <li>To buy </li>
                    <li>or to sell?</li>
                </ul>
                <a class="btn btn-lg btn-block btn-outline-primary" asp-controller="Home" asp-action="Recommendation">Let's trade</a>
            </div>
        </div>
    </div>
    </div>