@{
    ViewData["Title"] = "Stocks";
}

@model IEnumerable<Assignment_ActiveCloudSite.Models.Symbol>

<h2>Market Stocks</h2>
<p><bold>Symbol</bold>: refers to the symbol represented in Nasdaq Integrated symbology (INET).</p>
<p class="text-center">
    <a class="btn btn-success" asp-controller="Home" asp-action="UpdateSymbols">Refresh Symbols</a>
    <a class="btn btn-primary" asp-controller="Home" asp-action="FullSymbols">Full Symbols</a>
</p>
@if (Model == null)
{
    <p class="alert-info text-center">Please Load Symbols!</p>
}
else if (Model.Count() == 0)
{
    <p class="alert-danger text-center">Our database is empty! please Refresh Symbols first!</p>
}
else
{
    if (Model.Count() <= 50)
    {
        <p class="alert-info text-center">The first 50 Symbols from our database. Please Refresh Symbols to get an updated data from IEX API!</p>
    }
    else
    {
        <p class="alert-info text-center">All Symbols from our database.</p>

    }
    <table class="table">
        <thead>
            <tr>
                <th>
                    Symbol
                </th>
                <th>
                    Name
                </th>
                <th>
                    Update Date
                </th>
                <th>
                    Type
                </th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.symbol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.type)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}