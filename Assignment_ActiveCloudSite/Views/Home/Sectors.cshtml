@{
    ViewData["Title"] = "Market Sectors Performance";
}

@model IEnumerable<Assignment_ActiveCloudSite.Models.Sector>

<h2>Market Sectors Performance</h2>
<p class="text-center">
    <a class="btn btn-success" asp-controller="Home" asp-action="Sectors">Refresh Market Sectors Performance</a>
</p>
@if (Model == null)
{
    <p class="alert-info text-center">Please Refresh Market Sectors Performance!</p>
}
else if (Model.Count() == 0)
{
    <p class="alert-danger text-center">Our database is empty! please Refresh Market Sectors Performance first!</p>
}
else
{
    <div class="container">
        <div class="card-deck mb-3 text-center">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                        <div class="card-body d-flex flex-column align-items-start">
                            <h3 class="mb-0">
                                <a class="text-dark">@Html.DisplayFor(modelItem => item.name)</a>
                            </h3>
                            <div class="mb-1 text-muted">@Html.DisplayFor(modelItem => item.lastUppdated)</div>
                            @if (item.performance > 0)
                            {
                                var performance = item.performance * 100;
                                <h1 class="card-title text-success">@performance%</h1>
                            }
                            else
                            {
                                var performance = item.performance * 100;
                                <h1 class="card-title text-danger">@performance%</h1>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
